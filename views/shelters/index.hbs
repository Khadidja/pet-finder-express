<div class="container">
    <div class="page-header">
        {{#if error}}
        <div>
            <div class="alert alert-danger">{{error}}</div>
        </div>
        {{/if}}
        <h1>Find shelters:</h1>
        <form class="form-inline" action="/shelters" method="POST">
            <div class="form-group">
                <label for="shelter-location">Location:</label>
                <input type="text" name="location" class="form-control" id="shelter-location" placeholder="Zip code or City, State" required>
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    </div>
    <div>
        <ul class="list-group">
            {{#each shelters as |s|}}
            <li class="list-group-item">
                <a class="btn btn-xs pull-right" href="/shelters/{{s.id}}">View Pets</a>
                <address>
                    <strong>{{s.name}}</strong>
                    <br> {{s.city}}, {{s.state}} {{s.zip}}
                    <br> {{#if s.phone}}
                    <abbr title="Phone">P:</abbr> {{s.phone}}
                    <br> {{/if}} {{#if s.email}}
                    <a href="mailto:{{s.email}}">{{s.email}}</a>
                    {{/if}}
                </address>
            </li>
            {{/each}}
        </ul>
    </div>
</div>