<div class="container">
    <div class="page-header">
        <h1>{{shelter.name}}</h1>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div id="shelter-map">
                <iframe width="600" height="450" frameborder="0" style="border:0" src="{{shelter.mapUrl}}" allowfullscreen>
                </iframe>
            </div>
        </div>
        <div class="col-md-4">
            <address>
            {{shelter.city}}, {{shelter.state}} {{shelter.zip}}<br> {{#if shelter.phone}}
            <abbr title="Phone">P:</abbr> {{shelter.phone}} {{/if}} {{#if shelter.email}}
            <a href="mailto:{{shelter.email}}">{{shelter.email}}</a> {{/if}}
            </address>
            <a class="btn btn-primary" href="/shelters/{{shelter.id}}/pets">View adoptable pets</a>
        </div>
    </div>
</div>