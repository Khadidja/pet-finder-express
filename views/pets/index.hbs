<div class="container">
    <div class="page-header">
         {{#if error}}
        <div>
            <div class="alert alert-danger">{{error}}</div>
        </div>
        {{/if}}
        <h1>Find a pet near you!</h1>

        <form class="form-inline" action="/pets" method="POST">
            <div class="form-group">
                <label for="pet-location">Location:</label>
                <input type="text" name="location" class="form-control" id="pet-location" placeholder="Location" required>
            </div>
            <div class="form-group">
                <label for="pet-type">Type:</label>
                <select class="form-control" name="type" id="pet-select">
                    <option>any</option>
                    <option>barnyard</option>
                    <option>bird</option>
                    <option>cat</option>
                    <option>dog</option>
                    <option>horse</option>
                    <option>reptile</option>
                    <option>smallfurry</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    </div>
    {{#if pets}} {{#each pets as |pet|}}
    <div class="col-lg-3 col-md-4 col-xs-6">
        <div class="thumbnail thumb">
            <img src="{{pet.profilePicture}}" alt="{{pet.name}}">
            <div class="caption">
                <h3>{{pet.name}}</h3>
                <hr>
                <p class="text-muted">{{pet.age}} | {{pet.sex}} | {{pet.size}}</p>
            </div>
            <a class="btn btn-primary btn-md" href="pets/{{pet.id}}">Lean more!</a>
        </div>
    </div>
    {{/each}} {{/if}}
</div>